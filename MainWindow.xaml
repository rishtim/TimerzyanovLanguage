<Window x:Class="TimerzyanovLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerzyanovLanguage"
        mc:Ignorable="d"
        Title="Языковая школа Тимерзянов" Height="900" Width="1100" MinHeight="650" MinWidth="800" FontFamily="Comic Sans MS" Icon="Res/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="Res/school_logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Языковая школа" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
        <Button Name="BackBtn" Content="Назад" HorizontalAlignment="Right" Margin="5" Click="BackBtn_Click"></Button>
    </Grid>
</Window>
